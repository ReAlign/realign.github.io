.m-mdic-copy-wrapper
  position absolute
  top 16px
  right 16px
  div.u-mdic-copy-notify
    display none
    position absolute
    top 30px
    right 0px
    background #ae4967
    font-size 12px
    color #fff
    border-radius 2px
    padding 2px 6px
  button.u-mdic-copy-btn
    position relative
    margin 0
    padding 3px 8px
    border 0
    border-radius 3px
    background #fff
    cursor pointer

    opacity .3

    transition opacity .2s
    &:hover
      opacity 1
